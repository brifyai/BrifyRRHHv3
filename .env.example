# Configuración de Supabase
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_KEY=your-supabase-service-key

# Configuración de Brevo (SMS y Email Masivo)
# Obtén tus credenciales en https://app.brevo.com
REACT_APP_BREVO_API_KEY=your-brevo-api-key-v3
REACT_APP_BREVO_SMS_SENDER=YourSenderName
REACT_APP_BREVO_EMAIL_SENDER=noreply@yourcompany.com
REACT_APP_BREVO_EMAIL_NAME=Your Company Name

# Configuración de Google Drive
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id
REACT_APP_GOOGLE_CLIENT_SECRET=your-google-client-secret
REACT_APP_GOOGLE_API_KEY=your-google-api-key
REACT_APP_GOOGLE_REDIRECT_URI=https://your-netlify-domain.netlify.app/auth/google/callback

# Configuración de Groq (IA)
REACT_APP_GROQ_API_KEY=your-groq-api-key

# Configuración de desarrollo
PORT=3000
GENERATE_SOURCEMAP=false
REACT_APP_ENVIRONMENT=production
REACT_APP_DRIVE_MODE=local
REACT_APP_NETLIFY_URL=https://your-netlify-domain.netlify.app
WEBHOOK_SECRET=your-webhook-secret